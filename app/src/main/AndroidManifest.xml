<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="xyz.kurozero.notes">

    <application
        android:name="com.kotlinproject.notes.NotesApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_note_square"
        android:roundIcon="@mipmap/ic_note_circle"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.kotlinproject.notes.ui.activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.kotlinproject.notes.ui.activities.NoteActivity" />

        <meta-data
            android:name="AA_DB_NAME"
            android:value="Notes.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />

        <meta-data
            android:name="AA_MODELS"
            android:value="xyz.kurozero.notes.mvp.models.Note" />

    </application>

</manifest>
